<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MorochkaKA_02_01.FierdActivity">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Name="stylebtn">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Background" Value="LightGreen"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="Background" Value="White"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout BackgroundColor="#2196F3">
        <Label Text="Геометрический калькулятор" TextColor="White" FontSize="24" 
               HorizontalTextAlignment="Center" Margin="10,0,10,10"/>
        <Image Source="logo"
               WidthRequest="200" Margin="10,20,10,10"/>
        <Label Text="Результат вычислений:" TextColor="White" FontSize="24" 
                Margin="30,20,10,10"/>
        <Entry Placeholder="Название выбранной фигуры" Margin="30,20,30,0"/>
        <Entry Placeholder="Результат:" IsPassword="True" Margin="30,20,30,0"/>
        <Button Text="Регистрация" Margin="30,20,30,0" Clicked="Button_Clicked" FontSize="20"
                FontAttributes="Bold"/>

    </StackLayout>
</ContentPage>